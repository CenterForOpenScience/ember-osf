<div class={{if showBorder "panel panel-default" ''}}>
    <div class={{if showBorder "panel-body" ''}}>
        {{#if allowDismiss}}
            <span class='text-muted' style='cursor: pointer; float: right;' {{action 'dismiss'}} role="button">{{fa-icon 'times'}}</span>
        {{/if}}
        <div class="form-inline">
            <div class="form-group">
                <label id='ChooseALicenseLabel'> {{t 'eosf.components.licensePicker.chooseALicense'}} <span style="color: #e50000; font-weight: 400"> {{t 'eosf.components.licensePicker.required'}}</span></label>
                {{license-list
                    licenses=licensesAvailable
                    currentLicense=nodeLicense
                    showCategories=showCategories
                    select=(action 'selectLicense')
                }}
                <small><a target='_blank' rel="noopener" href='https://openscience.zendesk.com/hc/en-us/articles/360019930493-Preprint-FAQs#how_should_i_license_my_preprint'>{{t 'eosf.components.licensePicker.licenseFAQ'}}</a></small>
            </div>
            <br>
        </div>
        {{#if showYear}}
            <p>
                <label id='PickAYearLabel'>
                    {{t 'eosf.components.licensePicker.year'}}
                    {{#if yearRequired }}
                        <span style="color: #e50000; font-weight: 400"> {{t 'eosf.components.licensePicker.required'}}</span>
                    {{/if}}
                </label>
            </p>
            {{input
                (html-attributes aria-labelledby='PickAYearLabel')
                class='form-control'
                value=year
                enter=(action 'sendSubmit')
            }}
        {{/if}}
        {{#if showCopyrightHolders}}
            <br>
            <p>
                <label id='CopyrightHoldersLabel'>
                    {{t 'eosf.components.licensePicker.copyrightHolders'}}
                    {{#if copyrightHoldersRequired}}
                        <span style="color: #e50000; font-weight: 400"> {{t 'eosf.components.licensePicker.required'}}</span>
                    {{/if}}
                </label>
            </p>
            {{input
                (html-attributes aria-labelledby='CopyrightHoldersLabel')
                class='form-control'
                value=copyrightHolders
                enter=(action 'sendSubmit')
            }}
        {{/if}}
        <br>
        {{#if toggleText}}
            <a href="#" {{action 'toggleFullText'}}>{{if showText 'Hide full text' 'Show full text'}}</a>
        {{/if}}

        {{#if (or showText (not toggleText))}}
            <pre style='white-space: pre-wrap; word-break: normal; border:none; width:100%; text-align:justify; max-height: 300px;'>{{nodeLicenseText}}</pre>
        {{/if}}
        {{#unless autosave}}
            <button class='btn btn-success pull-right' {{action 'save'}}>{{t 'eosf.components.licensePicker.save'}}</button>
        {{/unless}}
    </div>
</div>
