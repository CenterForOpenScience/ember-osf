{{#light-table table as |t|}}
    {{#if isRoot}}
        {{t.head onColumnClick=(action 'onColumnClick')}}
    {{/if}}

    {{#t.body canExpand=true as |body|}}
        {{#body.expanded-row as |row|}}
            {{#if row.isFolder}}
                {{file-browser-subtree
                row=row
                indent=nextIndent
                isRoot=false
                sort=sort
                }}
            {{/if}}
        {{/body.expanded-row}}

        {{#if isLoading}}
            {{#body.loader}}
                Loading...
            {{/body.loader}}
        {{else}}
            {{#if table.isEmpty}}
                {{#body.no-data}}
                    (empty)
                {{/body.no-data}}
            {{/if}}
        {{/if}}
    {{/t.body}}
{{/light-table}}
