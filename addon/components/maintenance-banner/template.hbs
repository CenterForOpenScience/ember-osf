<button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action 'dismiss'}}>
    <span aria-hidden="true">{{t 'eosf.components.maintenanceBanner.times'}}</span>
</button>
<strong>{{t 'eosf.components.maintenanceBanner.notice'}}</strong>
<span>
    {{#if maintenance.message}}
        {{maintenance.message}}
    {{else}}
        {{t 'eosf.components.maintenanceBanner.willUndergoMaintenance.'}}
        <strong>
            <time>{{moment-format maintenance.start 'lll'}}</time>
            {{t 'eosf.components.maintenanceBanner.and'}}
            <time>{{moment-format maintenance.end 'lll'}}</time>
        </strong>
        {{! template-lint-disable bare-strings }}
        ({{moment-format maintenance.start 'ZZ'}} UTC).
        {{! template-lint-enable bare-strings}}
        {{t 'eosf.components.maintenanceBanner.thankYou'}}
    {{/if}}
</span>
