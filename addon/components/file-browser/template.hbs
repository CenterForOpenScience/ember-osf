{{#light-table table as |t|}}
    {{t.head}}

    {{#t.body canExpand=true as |body|}}
        {{#body.expanded-row as |row|}}
            {{file-browser-subtree files=row.files columns=columns}}
        {{/body.expanded-row}}

        {{#if isLoading}}
            {{#body.loader}}
                Loading...
            {{/body.loader}}
        {{else}}
            {{#if table.isEmpty}}
                {{#body.no-data}}
                    (empty)
                {{/body.no-data}}
            {{/if}}
        {{/if}}
    {{/t.body}}
{{/light-table}}
