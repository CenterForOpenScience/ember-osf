<div>
    <nav class="navbar navbar-inverse navbar-fixed-top" id="navbarScope" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">{{t 'eosf.navbar.toggleNavigation'}}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {{#unless (and hideSearch onSearchPage)}}
                    {{!-- TODO: Replace usage of knockout--}}
                    <span class="visible-xs" data-bind="click : toggleSearch, css: searchCSS">
                        <a class="osf-xs-search pull-right" {{action "toggleSearch"}} role="link" style="padding-top: 12px;">
                            <span rel="tooltip" data-placement="bottom" title={{t 'eosf.navbar.altSearchOSF'}} class="fa fa-search fa-lg fa-inverse"></span>
                        </a>
                    </span>
                {{/unless}}
                <a class="navbar-brand hidden-sm hidden-xs" href="/"><span class="osf-navbar-logo" width="27"></span> {{t 'eosf.navbar.openScienceFramework'}}</a>
                <a class="navbar-brand visible-sm visible-xs" href="/"><span class="osf-navbar-logo" width="27"></span> {{t 'eosf.navbar.osf'}}</a>
                {{#if service}}
                    <a class="navbar-brand navbar-service" href="{{serviceUrl}}"> {{service}}</a>
                {{/if}}
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    {{#if session.isAuthenticated}}
                        <li id="osfNavDashboard"><a href={{host}}>{{t 'eosf.navbar.dashboard'}}</a></li>
                        <li id="osfNavMyProjects"><a href="{{host}}myprojects/">{{t 'eosf.navbar.myProjects'}}</a></li>
                    {{/if}}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{t 'eosf.navbar.browse'}} <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{host}}explore/activity/">{{t 'eosf.navbar.newProjects'}}</a></li>
                            <li><a href="{{host}}registries/">{{t 'eosf.navbar.registries'}}</a></li>
                            <li><a href="{{host}}meetings/">{{t 'eosf.navbar.meetings'}}</a></li>
                            <li><a href="{{host}}preprints/">{{t 'eosf.navbar.preprints'}}</a></li>
                        </ul>
                    </li>
                    {{#unless session.isAuthenticated}}
                        <li class="dropdown">
                            <a href="/support/">{{t 'eosf.navbar.support'}}</a>
                        </li>
                    {{/unless}}
                    {{#unless hideSearch}}
                        {{#unless onSearchPage}}
                            <li class="hidden-xs">
                                <a onclick={{action "toggleSearch"}} role="link">
                                    <span rel="tooltip" data-placement="bottom" title={{t 'eosf.navbar.altSearchOSF'}} class="fa fa-search fa-lg"></span>
                                </a>
                            </li>
                        {{/unless}}
                    {{/unless}}
                    {{navbar-auth-dropdown signupUrl=signupUrl loginAction=loginAction}}
                </ul>
            </div>{{!--/.navbar-collapse --}}
        </div>
    </nav>
    {{#if showSearch}}
        {{search-dropdown action='toggleSearch'}}
    {{/if}}
</div>
