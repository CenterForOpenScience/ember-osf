                                            {{/if}}
                                            <div class="text-center m-b-sm"> <a href="/forgotpassword">Forgot password?</a></div>
                                        </form>
                                    </ul>
                                </div>
                            </li>
                            --}}
                        {{/if}}
                    {{/if}}
                </ul>
            </div>{{!--/.navbar-collapse --}}
        </div>
    </nav>
    {{#if showSearch}}
        {{#search-dropdown action='toggleSearch'}}
        {{/search-dropdown}}
    {{/if}}
</div>
