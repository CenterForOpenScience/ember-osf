<div class="new-osf-navbar-styling">
    <nav class="navbar navbar-inverse" id="navbarScope">
        <div class="container">
             <div class="navbar-header">
                {{!Toggle navigation button for xs screens}}
                 <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation-links">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="fa fa-bars fa-lg"></span>
                </button>
                {{!OSF Brand}}
                <a class="navbar-brand new-osf-navbar-styling" href="/"><span class="osf-navbar-logo"></span> OSF </a>
                {{!Primary navigation - toggle between OSF, Preprints, Registries, and Meetings}}
                <ul class="primary-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            {{#each osfServices as |service|}}
                                <li><a href="#" onclick={{action "switchService" service.name}}>OSF<b>{{service.name}}</b></a></li>
                            {{/each}}
                        </ul>
                    </li>
                </ul>
                  {{!Secondary navigation - displays corresponding links for selected service}}
                 <div class="current-service-bar">
                    <strong>{{currentService}}</strong>
                </div>
            </div>
             {{!Auth navbar}}
            <div class="navbar-collapse collapse navbar-right auth-navbar">
                 {{navbar-auth-dropdown signupUrl=signupUrl loginAction=loginAction}}
            </div>
        </div>
    </nav>
</div>

