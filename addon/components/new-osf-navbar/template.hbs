<div class="new-osf-navbar-styling">
    <nav class="navbar navbar-inverse" id="navbarScope">
        <div class="container">
            <div class="navbar-header">
                {{!Toggle navigation button for xs screens}}
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".secondary-navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {{!OSF Brand}}
                <a class="navbar-brand" href="/"><span class="osf-navbar-logo"></span> OSF </a>
                {{!Primary navigation - toggle between OSF, Preprints, Registries, and Meetings}}
                <ul class="primary-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu service-dropdown" role="menu">
                            {{#each osfServices as |service|}}
                                <li><a href="#" onclick={{action "switchService" service.name}}>OSF<b>{{service.name}}</b></a></li>
                            {{/each}}
                        </ul>
                    </li>
                </ul>
                    {{!Secondary navigation - displays corresponding links for selected service}}
                <div class="current-service-bar">
                    {{!Name of current service}}
                    <strong class="service-name">{{currentService}}</strong>
                    <div id="navbar" class="navbar-collapse collapse navbar-right hidden-xs">
                        <ul class="nav navbar-nav">
                            {{!Corresponding service links - Hidden on XS Screens}}
                            {{#each (build-secondary-nav-links currentService session) as |nav-link|}}
                                <li><a href="{{nav-link.href}}"> {{nav-link.name}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse navbar-right secondary-navigation">
                <ul class="nav navbar-nav">
                    {{!Corresponding service links, only visible on XS Screens}}
                    <div class="visible-xs">
                       {{#each (build-secondary-nav-links currentService session) as |navLink|}}
                            <li><a href="{{navLink.href}}"> {{navLink.name}}</a></li>
                        {{/each}}
                    </div>
                    {{!Auth navbar}}
                    {{navbar-auth-dropdown signupUrl=signupUrl loginAction=loginAction}}
                </ul>
            </div>
        </div>
    </nav>
</div>

