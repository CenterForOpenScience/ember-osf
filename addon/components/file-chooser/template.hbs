{{#if hasBlock}}
    {{yield this}}
{{else}}
    <p>
        {{input type='file' multiple=multiple
            change=(action 'onFileInputChange')}}
    </p>
    <p>
        {{t 'eosf.components.fileChooser.dragAndDropMessage'}}
    </p>
    {{#if errorMessage}}
        <div>{{t 'eosf.components.fileChooser.error'}} {{errorMessage}}</div>
    {{/if}}
    {{#if files}}
        <h4>{{t 'eosf.components.fileChooser.chosenFiles'}}</h4>
        <ul>
            {{#each files as |file|}}
                <li>{{file.name}}</li>
            {{/each}}
        </ul>
    {{/if}}
{{/if}}
