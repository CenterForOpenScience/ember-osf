{{# if session.isAuthenticated }}
    {{! TODO: Replace display name functionality if possible- for now truncate via CSS at end of label }}
    <button class="dropdown-toggle nav-user-dropdown btn-link" data-toggle="dropdown" role="button" aria-expanded="false" aria-label={{t-plus 'eosf.authDropdown.toggleAuthDropdown'}} {{action closeOtherNavigation}}>
        <span class="osf-gravatar">
            <img src="{{gravatarUrl}}" alt="User gravatar">
        </span> {{get-display-name user.fullName}}
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu auth-dropdown" role="menu">
        {{#if headline}}
            <li style="margin-left:10%;">{{headline}}</li>
        {{/if}}
        <li>
            <a href="{{serviceLinks.profile}}"><i class="fa fa-user fa-lg p-r-xs"></i> {{t-plus 'eosf.authDropdown.myProfile'}}</a>
        </li>
        <li>
            <a href="{{serviceLinks.osfSupport}}"><i class="fa fa-life-ring fa-lg p-r-xs"></i> {{t-plus 'eosf.authDropdown.osfSupport'}}</a>
        </li>

        <li>
            <a href="{{serviceLinks.settings}}"><i class="fa fa-cog fa-lg p-r-xs"></i> {{t-plus 'eosf.authDropdown.settings'}}</a>
        </li>
        <li>
            <a class="logoutLink" onclick={{action 'logout'}} role="button"><i class="fa fa-sign-out fa-lg p-r-xs"></i> {{t-plus 'eosf.authDropdown.logOut'}}</a>
        </li>
    </ul>
{{else if allowLogin}}
    {{#if institution}}
        {{! TODO: How does the page know whether this is an institution view? Implement in the future }}
        <div class="btn-group">
            <a href="${domain}login/?campaign=institution&redirect_url=${redirect_url}" class="btn btn-info btn-top-login">
                {{t-plus 'eosf.authDropdown.signIn'}} <span class="hidden-xs"><i class="fa fa-arrow-right"></i></span>
            </a>
        </div>
    {{else}}
        <div>
            <a href="{{signupUrl}}" class="btn btn-success btn-top-signup m-l-sm m-r-xs">{{t-plus 'eosf.authDropdown.signUp'}}</a>
            <a {{action loginAction}} class="btn btn-info btn-top-login m-r-xs" role="button">{{t-plus 'eosf.authDropdown.signIn'}}</a>
        </div>
    {{/if}}
{{/if}}
