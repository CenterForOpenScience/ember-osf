                <div class="p-v-sm">
                    <div class="row">
                        <div class="col-md-12 m-v-sm">
                            <div class="conference-centering">
                                <p class="donate-text">
                                    {{beforeText}}
                                    <a href="https://cos.io/donate" {{action 'click' 'link' "DonateBanner - Donate Now!" preventDefault=false}}>{{linkText}}</a>
                                    {{afterText}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
