{{! Template similar to Ember-Preprints Layout, but using Ember-SHARE properties}}
<div class="search-result p-sm">
    <div class="row">
        <div class="col-xs-12">
            {{!Title}}
            <h4>
                {{#if (and detailRoute osfID)}}
                    {{#link-to detailRoute osfID invokeAction=(action 'click' 'link' 'Discover - Result Title' osfID)}}{{fix-special-char result.title}}{{/link-to}}
                {{else if (and detailRoute (eq hostAppName 'Retraction Watch'))}}
                    {{#link-to detailRoute result.id}}{{fix-special-char result.title}}{{/link-to}}
                {{else}}
                    {{#if hyperlink}}
                        <a href='{{hyperlink}}' onclick={{action 'click' 'link' (concat 'Discover - Result Title: ' hyperlink) result.id}}>{{fix-special-char result.title}}</a>
                    {{else}}
                        <span>{{fix-special-char result.title}}</span>
                    {{/if}}
                {{/if}}
                {{#if result.withdrawn}}
                    <span class='label label-default'> {{t 'eosf.components.searchResult.withdrawn'}} </span>
                {{/if}}
            </h4>

            {{!Authors}}
            <div>
                <ul class="comma-list">
                    {{~#each creators as |creator|}}
                        {{~author-link contributor=creator}}
                    {{~/each}}
                </ul>
                {{#if extraCreators}} {{!+5, for example}}
                    <span class="text-muted">+{{extraCreators.length}}</span>
                {{/if}}
            </div>

            {{!Last edited on on}}
            {{#if result.date_updated}}
                <div class="m-t-sm"> <em> {{t "eosf.components.searchResult.lastEdited"}}: {{moment-format result.date_updated 'YYYY-MM-DD'}} </em> </div>
            {{/if}}

            {{!Disciplines}}
            {{#if subjects}}
                <div class="m-t-sm">
                    {{#each subjects as |subject|}}
                        <span class='subject-preview pointer' onclick={{action updateFilters 'subjects' subject.text}}>
                            {{subject.text}}
                        </span>
                    {{/each}}
                </div>
            {{/if}}
            {{#if extraSubjects}}
                <span class="text-muted">+{{extraSubjects.length}}</span>
            {{/if}}

            {{!Abstract}}
            <p>
                <div class="text-muted m-t-sm">
                    {{#if showBody}}
                        {{fix-special-char result.description}}
                    {{else}}
                         {{#if abbreviation}}
                             {{abbreviation}}
                             {{#if abbreviated}}
                                 <span class="text-muted">...</span>
                             {{/if}}
                         {{/if}}
                    {{/if}}
                </div>
            </p>

            {{!Provider and date}}
            <div class="m-t-sm">
                <span class="search-result-providers">
                    {{#each result.providers as |provider index|}}
                        {{if index '| '}}{{filter-replace provider.name filterReplace}}
                    {{/each}}
                    {{!For registries - registrationType}}
                    {{#if result.registrationType}}
                        | {{result.registrationType}}
                    {{/if}}
                </span>
                <span class="pull-right">
                    {{#if result.dateModified}} {{! moment-format will use current time if null}}
                        <span>{{moment-format result.dateModified "MMMM YYYY"}}</span>
                    {{/if}}
                </span>
            </div>

            {{#if showBody}}
                {{!Links}}
                {{#if result.hyperLinks}}
                    <ul class="preprints-block-list m-t-sm">
                        {{#each result.hyperLinks as |link|}}
                            <li><a href='{{link.url}}' onclick={{action 'click' 'link' (concat 'Discover - Result Hyperlink: ' link.url) result.id}}>{{link.url}}</a></li>
                        {{/each}}
                    </ul>
                {{/if}}

                {{#if result.infoLinks}}
                    <ul class="preprints-block-list">
                        {{#each result.infoLinks as |link|}}
                            <li><b>{{link.type}}:</b> {{link.uri}}</li>
                        {{/each}}
                    </ul>
                {{/if}}

                {{!Tags}}
                {{#each tags as |tag|}}
                    {{#if tagsInQueryParams}}
                        <button class="filter btn-link" {{action 'addFilter' 'tags' tag}}>
                            <span class="badge">{{fix-special-char tag}}</span>
                        </button>
                    {{else}}
                        <span class="badge">{{fix-special-char tag}}</span>
                    {{/if}}
                {{/each}}
                {{#if extraTags}}
                    <span class="text-muted">+{{extraTags.length}}</span>
                {{/if}}
            {{/if}}
        </div>
    </div>

    <div class="text-center" {{action "toggleShowBody"}}>
        <button class='toggleShowResult btn btn-link' aria-label={{t 'eosf.components.searchResult.showResult'}}>{{fa-icon footerIcon size=1 ariaHidden=false}}</button>
    </div>
</div>